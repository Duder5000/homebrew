<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Isopod -->  
    <ThingDef ParentName="BaseMechanoid">
      <defName>LTS_Mech_Isopod</defName>
      <label>grub</label>
      <description>A tiny, deployable combat mechanoid usually manufactured inside a mechwomb. Grubs are expendable fighters designed to draw fire or chase down fleeing foes, though a small swarm of them are perfectly capable of tearing apart a human combatant on their own. They have a thin, flexible shell, a non-rechargeable power source and are armed with a pair of sharp mandibles.</description>
      <statBases>
        <MoveSpeed>5.2</MoveSpeed>
		<MarketValue>800</MarketValue>
        <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
        <MechEnergyLossPerHP>0.66</MechEnergyLossPerHP>
		<MeleeDodgeChance>50</MeleeDodgeChance>
      </statBases>
      <race>
        <lifeStageAges>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>0</minAge>
            <soundWounded>Pawn_Mech_WarUrchin_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_WarUrchin_Death</soundDeath>
            <soundCall>Pawn_Mech_WarUrchin_Call</soundCall>
          </li>
          <li>
            <def>MechanoidFullyFormed</def>
            <minAge>100</minAge>
            <soundWounded>Pawn_Mech_WarUrchin_Wounded</soundWounded>
            <soundDeath>Pawn_Mech_WarUrchin_Death</soundDeath>
            <soundCall>Pawn_Mech_WarUrchin_Call</soundCall>
          </li>
        </lifeStageAges>
        <thinkTreeConstant>WarUrchinConstant</thinkTreeConstant>
		<!--<thinkTreeConstant MayRequire="Ludeon.RimWorld.Biotech">MechConstant</thinkTreeConstant>-->
        <baseHealthScale>0.1</baseHealthScale>
		<body>LTS_Isopod</body>
        <intelligence>ToolUser</intelligence>
        <thinkTreeMain>Mechanoid</thinkTreeMain>
        <baseBodySize>0.2</baseBodySize>
        <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
        <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
        <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
        <mechWeightClass>Light</mechWeightClass>
      </race>
	  <butcherProducts>
        <Steel>5</Steel>
      </butcherProducts>
      <comps Inherit="False">
        <li Class="CompProperties_CanBeDormant" />
        <li Class="CompProperties_WakeUpDormant">
          <wakeUpOnDamage>true</wakeUpOnDamage>
          <wakeUpCheckRadius>30</wakeUpCheckRadius>
          <wakeUpSound>MechanoidsWakeUp</wakeUpSound>
        </li>
        <li Class="CompProperties_MechPowerCell">
          <totalPowerTicks>15000</totalPowerTicks>
        </li>
      </comps>
	  <tools>
		<li>
          <label>mandible</label>
          <capacities>
            <li>Cut</li>
            <li>Stab</li>
          </capacities>
          <power>6</power>
          <cooldownTime>2</cooldownTime>
          <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
          <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
        </li>
      </tools>
    </ThingDef>
    
    <PawnKindDef ParentName="LightMechanoidKind">
      <defName>LTS_Mech_Isopod</defName>
      <label>grub</label>
      <labelPlural>grubs</labelPlural>
      <race>LTS_Mech_Isopod</race>
      <allowInMechClusters>false</allowInMechClusters>
      <forceNoDeathNotification>true</forceNoDeathNotification>
      <lifeStages>
        <li>
          <bodyGraphicData>
            <texPath>Things/Isopod</texPath>
            <maskPath>Things/AllegianceOverlays/Isopod</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>0.7</drawSize>
            <shadowData>
              <volume>(0.1, 0.15, 0.1)</volume>
            </shadowData>
          </bodyGraphicData>
        </li>
        <li>
          <bodyGraphicData>
            <texPath>Things/IsopodAncient</texPath> <!--ancient-->
            <maskPath>Things/AllegianceOverlays/Isopod</maskPath>
            <shaderType>CutoutWithOverlay</shaderType>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>0.7</drawSize>
            <shadowData>
              <volume>(0.1, 0.15, 0.1)</volume>
            </shadowData>
          </bodyGraphicData>
        </li>
      </lifeStages>
	  <controlGroupPortraitZoom>2.7</controlGroupPortraitZoom>
    </PawnKindDef>

</Defs>