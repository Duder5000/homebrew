        <li>
          <def>MechanicalCentipedeBodySecondRing</def>
          <coverage>0.71</coverage>
          <parts>
            <li>
              <def>Reactor</def>
              <coverage>0.05</coverage>
              <depth>Inside</depth>
            </li>
            <li>
              <def>MechanicalCentipedeBodyThirdRing</def>
              <coverage>0.8</coverage>
              <parts>
                <li>
                  <def>FluidReprocessor</def>
                  <coverage>0.05</coverage>
                  <depth>Inside</depth>
                </li>
              </parts>
            </li>
          </parts>
        </li>
      </parts>
